{
  "name": "fanverse-monorepo",
  "version": "1.0.0",
  "description": "FanVerse - Plateforme de fan engagement complÃ¨te avec blockchain",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "fanverse-contract"
  ],
  "scripts": {
    "dev": "node start-dev.js",
    "dev:simple": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:contracts": "cd fanverse-contract && npx hardhat node",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:contracts\"",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:contracts": "cd fanverse-contract && npx hardhat compile",
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:contracts",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:contracts": "cd fanverse-contract && npm install",
    "test": "npm run test:frontend && npm run test:backend && npm run test:contracts",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm test",
    "test:contracts": "cd fanverse-contract && npx hardhat test",
    "deploy:contracts": "cd fanverse-contract && npx hardhat run scripts/deploy.js --network localhost",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules fanverse-contract/node_modules",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "fanverse",
    "blockchain",
    "fan-engagement",
    "next.js",
    "node.js",
    "smart-contracts",
    "hardhat"
  ],
  "author": "FanVerse Team",
  "license": "MIT",
  "dependencies": {
    "colors": "^1.4.0",
    "mongoose": "^8.16.3",
    "puppeteer": "^24.12.1",
    "socket.io-client": "^4.8.1"
  }
}
